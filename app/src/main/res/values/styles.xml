<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <!-- Keyboard Style [IME] -->
    <style name="KeyboardStyle">
        <item name="android:background">@color/keyboard_background</item>
        <item name="android:keyBackground">@drawable/key_background</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:keyTextSize">@dimen/key_text_size</item>
        <item name="android:keyTextColor">@color/key_text</item>
        <item name="android:labelTextSize">@dimen/key_text_size</item>
        <item name="android:shadowColor">@color/key_text</item>
        <item name="android:shadowRadius">1.1</item>
    </style>

    <style name="PopupKeyboardStyle" parent="KeyboardStyle">
        <item name="android:background">@drawable/popup_background</item>
        <item name="android:keyBackground">@drawable/popup_key_background</item>
    </style>

</resources>